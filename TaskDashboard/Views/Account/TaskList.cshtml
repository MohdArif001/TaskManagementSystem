@model IEnumerable<TaskDashboard.Models.TaskListModel>

<div>
    <h3>Task List</h3>

    <p style="text-align:right;margin-right:20px;">
        <a class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#createTaskModal" id="createTask">Create New Task</a>
    </p>

    <table class=" table table-bordered">
        <tr>
            <th>Task Name</th>
            <th>Description</th>
            <th>Status</th>
            <th>Issue Type</th>
            <th>Project</th>
            <th>Priority</th>
            <th>Assigned To</th>
            <th>Reporter</th>
            <th>Action</th>
        </tr>
        @foreach (var task in Model)
        {
            <tr>
                <td style="word-wrap:break-word; max-width: 183px;">@task.TaskName</td>
                <td style="word-wrap:break-word; max-width: 183px;">@task.Description</td>
                <td>@task.StatusName</td>
                <td>@task.IssueTypeName</td>
                <td>@task.ProjectName</td>
                <td>@task.PriorityName</td>
                <td>@task.AssignedTo</td>             
                <td>@task.Reporter</td>                      
                <td>
                    <button class="btn btn-warning" onClick="getTask(@task.Id)">Edit</button>
                    <button class="btn btn-danger" onClick="deleteTask(@task.Id)">Delete</button>
                </td>
            </tr>
        }
    </table>
</div>
<!-- Modal -->
<div class="modal fade" id="createTaskModal" role="dialog">
    <div class="modal-dialog">
        <div style="display: none; height: 100px;" id="taskId">1</div>
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-bs-dismiss="modal">&times;</button>
                <h4 class="modal-title">Create Your Task Here</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="sel1" class="form-label">Project</label>
                            <select class="form-select" id="sel1" name="sellist1">
                                <option>Select</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="sel7" class="form-label">Task Name</label>
                            <textarea class="form-control" row="3" id="sel7"></textarea>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="sel2" class="form-label">Issue type</label>
                            <select class="form-select" id="sel2" name="sellist1">
                                <option>Select</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="sel3" class="form-label">Status</label>
                            <select class="form-select" id="sel3" name="sellist1">
                                <option>Select</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="sel4" class="form-label">Summary</label>
                            <textarea class="form-control" row="3" id="sel4"></textarea>
                        </div>

                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="sel5" class="form-label">Priority</label>
                            <select class="form-select" id="sel5" name="sellist1">
                                <option>Select</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="sel6" class="form-label">Assignee</label>
                            <select class="form-select" id="sel6" name="sellist1">
                                <option>Select</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-12 py-4 d-flex justify-content-end">
                        <button class="btn btn-primary" id="addTask">Create</button>
                        <button class="btn btn-warning" id="updateTask">Update</button>
                    </div>
                </div>
            </div>
        </div>

    </div>
    </div>

@section scripts{
    <script src="~/js/site.js"></script>
}
